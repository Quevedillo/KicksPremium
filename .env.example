# Supabase Configuration
PUBLIC_SUPABASE_URL=https://your-project.supabase.co
PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here

# Private (server-side only)
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Admin Auth
PUBLIC_ADMIN_EMAIL=admin@kickspremium.com

# Stripe - Pasarela de Pago
PUBLIC_STRIPE_PUBLIC_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Clave secreta (solo backend - NUNCA exponer)
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Webhook Secret (opcional - para webhooks de Stripe)
# Obtén esto en: https://dashboard.stripe.com/webhooks
# Apunta tu webhook a: https://tudominio.com/api/webhooks/stripe
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Cloudinary - Almacenamiento de Imágenes
PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloud_name_here
CLOUDINARY_API_KEY=your_api_key_here
CLOUDINARY_API_SECRET=your_api_secret_here

# Brevo - Servicio de Email (Transaccional)
# Obtén tu API key en: https://www.brevo.com (antes Sendinblue)
# Usado para enviar emails de confirmación de pedidos y newsletter
BREVO_API_KEY=your_brevo_api_key_here
# Email verificado en Brevo (usado como FROM en los emails)
FROM_EMAIL=your-verified-email@example.com