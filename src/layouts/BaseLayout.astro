---
import '@lib/auth-init';
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
  lightMode?: boolean;
}

const { title = 'KicksPremium', description = 'Sneakers aut√©nticos premium', lightMode = false } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Oswald:wght@400;500;600;700&family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    
    <!-- Theme Script - Carga antes del render para evitar flash -->
    <script is:inline>
      (function() {
        // Si estamos en admin, verificar preferencia guardada
        const isAdmin = window.location.pathname.startsWith('/admin');
        if (isAdmin) {
          const savedTheme = localStorage.getItem('admin-theme');
          // Por defecto en admin es modo claro
          if (savedTheme === 'dark') {
            document.documentElement.classList.add('dark-mode');
          } else {
            document.documentElement.classList.add('light-mode');
          }
        }
      })();
    </script>
  </head>
  <body class:list={[
    'font-sans',
    lightMode ? 'bg-neutral-100 text-neutral-900 light-mode' : 'bg-brand-black text-white'
  ]}>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --font-display: 'Oswald', ui-sans-serif, system-ui, sans-serif;
    --font-sans: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    --color-black: #0A0A0A;
    --color-dark: #141414;
    --color-gray: #1E1E1E;
    --color-red: #FF3131;
    --color-orange: #FF6B35;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  h1, h2, h3, h4, h5, h6 {
    font-family: var(--font-display);
    font-weight: 700;
  }

  /* Remove focus outline but keep accessibility */
  button:focus-visible,
  a:focus-visible {
    outline: 2px solid var(--color-red);
    outline-offset: 2px;
  }

  /* Smooth transitions */
  @media (prefers-reduced-motion: no-preference) {
    html {
      scroll-behavior: smooth;
    }
  }
</style>
