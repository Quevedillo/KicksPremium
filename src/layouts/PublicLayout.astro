---
import BaseLayout from "./BaseLayout.astro";
import CartIcon from "@components/islands/CartIcon";
import CartSlideOver from "@components/islands/CartSlideOver";
import UserMenu from "@components/islands/UserMenu";
import NewsletterPopup from "@components/islands/NewsletterPopup";

interface Props {
  title?: string;
  description?: string;
}

const { title, description } = Astro.props;
---

<BaseLayout title={title} description={description}>
  {/* Header - Estilo Sneaker Store con Logo Animado */}
  <header
    class="sticky top-0 z-30 bg-brand-black/95 backdrop-blur-sm border-b border-brand-gray animate-fade-in-up"
  >
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between h-16">
        {/* Logo con animación */}
        <a href="/" class="flex items-center gap-4 group logo-hover">
          <div
            class="relative w-12 h-12 md:w-16 md:h-16 flex items-center justify-center"
          >
            <div
              class="absolute inset-0 bg-brand-red/20 rounded-full blur-xl group-hover:bg-brand-red/40 transition-all duration-500"
            >
            </div>
            <img
              src="/kickspremium_LOGO.png"
              alt="KicksPremium Logo"
              class="relative z-10 w-full h-full object-contain animate-float"
            />
          </div>
          <div class="flex flex-col justify-center">
            <span
              class="text-xl md:text-2xl font-display font-bold text-white tracking-widest uppercase leading-none text-glow-red"
            >
              KICKS<span class="text-brand-red">PREMIUM</span>
            </span>
            <span
              class="text-[10px] text-neutral-400 uppercase tracking-[0.3em] font-medium mt-1"
              >Authentic Sneakers</span
            >
          </div>
        </a>

        {/* Navigation */}
        <nav class="hidden md:flex items-center gap-8">
          <a
            href="/"
            class="text-sm font-bold text-white/80 hover:text-brand-red hover:text-glow-red transition-all uppercase tracking-widest"
          >
            Inicio
          </a>
          <a
            href="/productos"
            class="text-sm font-bold text-white/80 hover:text-brand-red hover:text-glow-red transition-all uppercase tracking-widest"
          >
            Catalogo
          </a>
          <a
            href="/productos?brand=nike"
            class="text-sm font-bold text-white/80 hover:text-brand-red hover:text-glow-red transition-all uppercase tracking-widest"
          >
            Nike
          </a>
          <a
            href="/productos?brand=adidas"
            class="text-sm font-bold text-white/80 hover:text-brand-red hover:text-glow-red transition-all uppercase tracking-widest"
          >
            Adidas
          </a>
          <a
            href="/categoria/limited-editions"
            class="text-sm font-bold text-brand-red hover:text-white transition-all uppercase tracking-widest animate-pulse-custom"
          >
            Exclusive Drops
          </a>
        </nav>

        {/* Right Side - User Menu & Cart */}
        <div class="flex items-center gap-6">
          <UserMenu client:only="react" />
          <CartIcon client:only="react" />
        </div>
      </div>
    </div>
  </header>

  {/* Main Content */}
  <main class="min-h-screen bg-transparent">
    <slot />
  </main>

  {/* Footer - Estilo Sneaker */}
  <footer
    class="bg-brand-black/80 backdrop-blur-xl text-white border-t border-brand-red/20 relative overflow-hidden"
  >
    <div
      class="absolute top-0 left-1/2 -translate-x-1/2 w-1/2 h-px bg-gradient-to-r from-transparent via-brand-red to-transparent"
    >
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 relative z-10">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-12 mb-12">
        {/* Brand */}
        <div class="flex flex-col gap-4">
          <h3
            class="text-2xl font-display font-bold uppercase tracking-widest text-glow-red"
          >
            KICKS<span class="text-brand-red">PREMIUM</span>
          </h3>
          <p class="text-neutral-400 text-sm leading-relaxed">
            Tu destino definitivo para sneakers de edición limitada y
            coleccionables auténticos. Elevando el street culture al siguiente
            nivel.
          </p>
          <div class="flex gap-4 mt-2">
            <a
              href="#"
              class="w-10 h-10 rounded-full border border-neutral-800 flex items-center justify-center hover:bg-brand-red hover:border-brand-red transition-all duration-300 group"
            >
              <span class="text-xs group-hover:scale-110">IG</span>
            </a>
            <a
              href="#"
              class="w-10 h-10 rounded-full border border-neutral-800 flex items-center justify-center hover:bg-brand-red hover:border-brand-red transition-all duration-300 group"
            >
              <span class="text-xs group-hover:scale-110">TW</span>
            </a>
            <a
              href="#"
              class="w-10 h-10 rounded-full border border-neutral-800 flex items-center justify-center hover:bg-brand-red hover:border-brand-red transition-all duration-300 group"
            >
              <span class="text-xs group-hover:scale-110">TK</span>
            </a>
          </div>
        </div>

        {/* Links */}
        <div>
          <h4
            class="font-bold mb-6 uppercase tracking-widest text-brand-red text-sm"
          >
            Colecciones
          </h4>
          <ul class="space-y-3 text-sm text-neutral-400">
            <li>
              <a
                href="/productos"
                class="hover:text-white hover:translate-x-2 inline-block transition-all"
                >Todos los Kicks</a>
            </li>
            <li>
              <a
                href="/productos?brand=nike"
                class="hover:text-white hover:translate-x-2 inline-block transition-all"
                >Nike</a>
            </li>
            <li>
              <a
                href="/productos?brand=adidas"
                class="hover:text-white hover:translate-x-2 inline-block transition-all"
                >Adidas</a>
            </li>
            <li>
              <a
                href="/categoria/limited-editions"
                class="hover:text-white hover:translate-x-2 inline-block transition-all text-brand-red"
                >Exclusive Drops</a>
            </li>
          </ul>
        </div>

        {/* Support */}
        <div>
          <h4
            class="font-bold mb-6 uppercase tracking-widest text-brand-red text-sm"
          >
            Servicios
          </h4>
          <ul class="space-y-3 text-sm text-neutral-400">
            <li>
              <a
                href="/servicios/guia-tallas"
                class="hover:text-white hover:translate-x-2 inline-block transition-all"
                >Guía de Tallas</a>
            </li>
            <li>
              <a
                href="/servicios/legit-check"
                class="hover:text-white hover:translate-x-2 inline-block transition-all"
                >Legit Check</a>
            </li>
            <li>
              <a
                href="/servicios/envios-globales"
                class="hover:text-white hover:translate-x-2 inline-block transition-all"
                >Envíos Globales</a>
            </li>
            <li>
              <a
                href="/servicios/devoluciones"
                class="hover:text-white hover:translate-x-2 inline-block transition-all"
                >Devoluciones</a>
            </li>
          </ul>
        </div>
      </div>

      {/* Divider */}
      <div
        class="border-t border-brand-gray pt-8 flex flex-col md:flex-row justify-between items-center gap-4"
      >
        <p class="text-neutral-500 text-sm">
          © 2026 KicksPremium. Todos los derechos reservados.
        </p>
        <div class="flex gap-4 text-sm text-neutral-500">
          <span>✓ 100% Auténtico</span>
          <span>✓ Envío Express</span>
          <span>✓ Garantía</span>
        </div>
      </div>
    </div>
  </footer>

  {/* Cart Slide Over */}
  <CartSlideOver client:only="react" />

  {/* Newsletter Popup - Aparece tras 5 segundos para nuevos visitantes */}
  <NewsletterPopup client:only="react" delayMs={5000} discountPercent={10} />
</BaseLayout>
