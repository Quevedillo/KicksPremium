import PublicLayout from '@layouts/PublicLayout.astro';
import { supabase } from '@lib/supabase';
import type { Product } from '@lib/supabase';

// Get query params for filtering
const url = new URL(Astro.request.url);
const brandFilter = url.searchParams.get('brand');
const colorFilter = url.searchParams.get('color');
const categoryFilter = url.searchParams.get('category');
const collectionFilter = url.searchParams.get('collection'); // Nueva colecci√≥n
const priceRange = url.searchParams.get('price'); // Rango de precios
const conditionFilter = url.searchParams.get('condition'); // Estado del producto
const sortFilter = url.searchParams.get('sort') || 'newest';
const searchQuery = url.searchParams.get('search'); // B√∫squeda desde header

// Fetch brands for filter
const { data: brands } = await supabase
  .from('brands')
  .select('*')
  .order('display_order');

// Fetch colors for filter
const { data: colors } = await supabase
  .from('colors')
  .select('*')
  .order('display_order');

// Fetch categories for filter
const { data: categories } = await supabase
  .from('categories')
  .select('*')
  .order('display_order');

// Build products query with filters
let productsQuery = supabase
  .from('products')
  .select('*, categories(name, slug)');

// Apply search query if present
if (searchQuery && searchQuery.length >= 2) {
  productsQuery = productsQuery.or(`name.ilike.%${searchQuery}%,brand.ilike.%${searchQuery}%,model.ilike.%${searchQuery}%,colorway.ilike.%${searchQuery}%,description.ilike.%${searchQuery}%`);
}

// Apply sort
if (sortFilter === 'price-asc') {
  productsQuery = productsQuery.order('price', { ascending: true });
} else if (sortFilter === 'price-desc') {
  productsQuery = productsQuery.order('price', { ascending: false });
} else if (sortFilter === 'name-asc') {
  productsQuery = productsQuery.order('name', { ascending: true });
} else {
  productsQuery = productsQuery.order('created_at', { ascending: false });
}

if (brandFilter) {
  productsQuery = productsQuery.ilike('brand', brandFilter);
}

if (colorFilter) {
  productsQuery = productsQuery.ilike('color', colorFilter);
}

if (categoryFilter) {
  const category = categories?.find(c => c.slug === categoryFilter);
  if (category) {
    productsQuery = productsQuery.eq('category_id', category.id);
  }
}

// Filter by collection/edition type
if (collectionFilter) {
  if (collectionFilter === 'limited') {
    productsQuery = productsQuery.eq('is_limited_edition', true);
  } else if (collectionFilter === 'new') {
    // Mostrar productos recientemente agregados (el orden ya los pone al principio)
    // No necesita filtro adicional, solo el orden por created_at
  } else if (collectionFilter === 'restock') {
    productsQuery = productsQuery.eq('release_type', 'restock');
  }
}

// Filter by price range
if (priceRange) {
  const [minStr, maxStr] = priceRange.split('-');
  const min = parseInt(minStr) * 100; // Convert to cents
  const max = maxStr ? parseInt(maxStr) * 100 : null;
  
  if (min) productsQuery = productsQuery.gte('price', min);
  if (max) productsQuery = productsQuery.lte('price', max);
}

// Filtrar solo productos con stock > 0
productsQuery = productsQuery.gt('stock', 0);

const { data: products, error } = await productsQuery;

// Filtrar productos que realmente tienen tallas con stock
let productsWithSizes = (products || []).filter(p => {
  if (!p.sizes_available || Object.keys(p.sizes_available).length === 0) return false;
  return Object.values(p.sizes_available).some(qty => (parseInt(String(qty)) || 0) > 0);
});

let filteredProducts = productsWithSizes;

if (error) {
  console.error('Error fetching products:', error);
}

const productsList: Product[] = filteredProducts;

// Active filters info
const activeFilters = {
  brand: brandFilter,
  color: colorFilter,
  category: categoryFilter,
  collection: collectionFilter,
  price: priceRange,
  condition: conditionFilter,
  sort: sortFilter,
  search: searchQuery,
};
const hasFilters = brandFilter || colorFilter || categoryFilter || collectionFilter || priceRange || conditionFilter || searchQuery;

// Collections/editions options (mejores opciones que los estilos)
const collections = [
  { value: 'limited', label: 'Ediciones Limitadas', icon: '‚≠ê' },
  { value: 'new', label: 'Nuevos Lanzamientos', icon: '‚ú®' },
  { value: 'restock', label: 'Restocks', icon: 'üîÑ' },
];

// Price ranges in EUR
const priceRanges = [
  { value: '0-200', label: 'Hasta ‚Ç¨200' },
  { value: '200-500', label: '‚Ç¨200 - ‚Ç¨500' },
  { value: '500-1000', label: '‚Ç¨500 - ‚Ç¨1.000' },
  { value: '1000-', label: 'M√°s de ‚Ç¨1.000' },
];

// Helper function to build URL with params
function buildUrl(params: Record<string, string | null>) {
  const currentParams = new URLSearchParams();
  
  // Preserve existing params
  if (brandFilter && !('brand' in params)) currentParams.set('brand', brandFilter);
  if (colorFilter && !('color' in params)) currentParams.set('color', colorFilter);
  if (categoryFilter && !('category' in params)) currentParams.set('category', categoryFilter);
  if (collectionFilter && !('collection' in params)) currentParams.set('collection', collectionFilter);
  if (priceRange && !('price' in params)) currentParams.set('price', priceRange);
  if (sortFilter && sortFilter !== 'newest' && !('sort' in params)) currentParams.set('sort', sortFilter);
  if (searchQuery && !('search' in params)) currentParams.set('search', searchQuery);
  
  // Apply new params
  Object.entries(params).forEach(([key, value]) => {
    if (value) {
      currentParams.set(key, value);
    } else {
      currentParams.delete(key);
    }
  });
  
  const queryString = currentParams.toString();
  return '/productos' + (queryString ? '?' + queryString : '');
}
