    animation: dropdownSlideIn 0.15s ease-out;
  }
  
  @keyframes dropdownSlideIn {
    from {
      opacity: 0;
      transform: translateY(-8px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .filter-dropdown:hover .filter-btn {
    border-color: #FF3131;
  }
</style>
