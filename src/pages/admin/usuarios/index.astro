---
import AdminLayout from '@layouts/AdminLayout.astro';
import { supabase } from '@lib/supabase';

// Obtener perfiles de usuario
const { data: users, error } = await supabase
  .from('user_profiles')
  .select('*')
  .order('created_at', { ascending: false });

const usersList = users || [];

// Stats
const totalUsers = usersList.length;
const adminUsers = usersList.filter(u => u.is_admin).length;
const activeUsers = usersList.filter(u => u.is_active !== false).length;

// Formatear fecha
const formatDate = (date: string) => {
  return new Date(date).toLocaleDateString('es-ES', {
    day: '2-digit',
    month: 'short',
    year: 'numeric',
  });
};
---

<AdminLayout title="Gestión de Usuarios" currentPage="usuarios">
  <div class="space-y-6">
    {/* Stats */}
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <div class="bg-white rounded-xl border border-neutral-200 p-6">
        <div class="flex items-center gap-4">
          <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
          </div>
          <div>
            <p class="text-3xl font-bold text-brand-black">{totalUsers}</p>
            <p class="text-sm text-neutral-500">Usuarios totales</p>
          </div>
        </div>
      </div>
      
      <div class="bg-white rounded-xl border border-neutral-200 p-6">
        <div class="flex items-center gap-4">
          <div class="w-12 h-12 bg-purple-100 rounded-xl flex items-center justify-center">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
          </div>
          <div>
            <p class="text-3xl font-bold text-brand-black">{adminUsers}</p>
            <p class="text-sm text-neutral-500">Administradores</p>
          </div>
        </div>
      </div>
      
      <div class="bg-white rounded-xl border border-neutral-200 p-6">
        <div class="flex items-center gap-4">
          <div class="w-12 h-12 bg-green-100 rounded-xl flex items-center justify-center">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
          </div>
          <div>
            <p class="text-3xl font-bold text-brand-black">{activeUsers}</p>
            <p class="text-sm text-neutral-500">Usuarios activos</p>
          </div>
        </div>
      </div>
    </div>

    {/* Users Table */}
    {usersList.length > 0 ? (
      <div class="bg-white rounded-xl border border-neutral-200 overflow-hidden">
        <div class="p-6 border-b border-neutral-200">
          <h2 class="text-lg font-bold text-brand-black">Lista de Usuarios</h2>
        </div>
        
        <div class="overflow-x-auto">
          <table class="w-full">
            <thead class="bg-neutral-50 border-b border-neutral-200">
              <tr>
                <th class="px-6 py-4 text-left text-xs font-semibold text-neutral-600 uppercase tracking-wider">
                  Usuario
                </th>
                <th class="px-6 py-4 text-left text-xs font-semibold text-neutral-600 uppercase tracking-wider">
                  Contacto
                </th>
                <th class="px-6 py-4 text-left text-xs font-semibold text-neutral-600 uppercase tracking-wider">
                  Rol
                </th>
                <th class="px-6 py-4 text-left text-xs font-semibold text-neutral-600 uppercase tracking-wider">
                  Estado
                </th>
                <th class="px-6 py-4 text-left text-xs font-semibold text-neutral-600 uppercase tracking-wider">
                  Registro
                </th>
                <th class="px-6 py-4 text-right text-xs font-semibold text-neutral-600 uppercase tracking-wider">
                  Acciones
                </th>
              </tr>
            </thead>
            <tbody class="divide-y divide-neutral-100">
              {usersList.map((user) => (
                <tr class="hover:bg-neutral-50 transition-colors">
                  <td class="px-6 py-4">
                    <div class="flex items-center gap-3">
                      <div class={`w-10 h-10 rounded-full flex items-center justify-center text-white font-bold ${user.is_admin ? 'bg-purple-600' : 'bg-brand-black'}`}>
                        {(user.full_name || 'U').charAt(0).toUpperCase()}
                      </div>
                      <div>
                        <p class="font-semibold text-brand-black">
                          {user.full_name || 'Sin nombre'}
                        </p>
                        <p class="text-xs text-neutral-500 font-mono">
                          {user.id.slice(0, 8)}...
                        </p>
                      </div>
                    </div>
                  </td>
                  <td class="px-6 py-4">
                    {user.phone && (
                      <p class="text-sm text-neutral-600">{user.phone}</p>
                    )}
                    {user.city && (
                      <p class="text-xs text-neutral-400">{user.city}</p>
                    )}
                    {!user.phone && !user.city && (
                      <p class="text-sm text-neutral-400">Sin contacto</p>
                    )}
                  </td>
                  <td class="px-6 py-4">
                    {user.is_admin ? (
                      <span class="inline-flex items-center gap-1 px-2.5 py-1 rounded-full text-xs font-semibold bg-purple-100 text-purple-800">
                        <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                        </svg>
                        Admin
                      </span>
                    ) : (
                      <span class="inline-flex px-2.5 py-1 rounded-full text-xs font-medium bg-neutral-100 text-neutral-700">
                        Cliente
                      </span>
                    )}
                  </td>
                  <td class="px-6 py-4">
                    {user.is_active !== false ? (
                      <span class="inline-flex items-center gap-1 px-2.5 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                        <span class="w-1.5 h-1.5 bg-green-500 rounded-full"></span>
                        Activo
                      </span>
                    ) : (
                      <span class="inline-flex items-center gap-1 px-2.5 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800">
                        <span class="w-1.5 h-1.5 bg-red-500 rounded-full"></span>
                        Inactivo
                      </span>
                    )}
                  </td>
                  <td class="px-6 py-4">
                    <p class="text-sm text-neutral-600">
                      {user.created_at ? formatDate(user.created_at) : 'N/A'}
                    </p>
                  </td>
                  <td class="px-6 py-4 text-right">
                    <div class="flex items-center justify-end gap-2">
                      <button
                        class="toggle-admin-btn p-2 text-neutral-400 hover:text-purple-600 hover:bg-purple-50 rounded-lg transition-colors"
                        data-id={user.id}
                        data-is-admin={user.is_admin}
                        title={user.is_admin ? 'Quitar admin' : 'Hacer admin'}
                      >
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                        </svg>
                      </button>
                      <button
                        class="toggle-active-btn p-2 text-neutral-400 hover:text-green-600 hover:bg-green-50 rounded-lg transition-colors"
                        data-id={user.id}
                        data-is-active={user.is_active !== false}
                        title={user.is_active !== false ? 'Desactivar' : 'Activar'}
                      >
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={user.is_active !== false ? "M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636" : "M5 13l4 4L19 7"} />
                        </svg>
                      </button>
                    </div>
                  </td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      </div>
    ) : (
      <div class="bg-white rounded-xl border border-neutral-200 p-12 text-center">
        <svg class="w-16 h-16 text-neutral-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
        </svg>
        <h3 class="text-lg font-semibold text-brand-black mb-2">No hay usuarios registrados</h3>
        <p class="text-neutral-500">
          Los usuarios aparecerán aquí cuando se registren en la tienda.
        </p>
      </div>
    )}

    {/* Info Card */}
    <div class="bg-blue-50 border border-blue-200 rounded-xl p-6">
      <div class="flex items-start gap-4">
        <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center flex-shrink-0">
          <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div>
          <h4 class="font-semibold text-blue-900 mb-1">Nota sobre usuarios</h4>
          <p class="text-sm text-blue-700">
            Los perfiles de usuario se crean automáticamente cuando se registran en la tienda. 
            Desde aquí puedes gestionar permisos de administrador y estado de cuentas.
          </p>
        </div>
      </div>
    </div>
  </div>
</AdminLayout>

<script>
  // Toggle admin status
  const toggleAdminBtns = document.querySelectorAll('.toggle-admin-btn');
  toggleAdminBtns.forEach(btn => {
    btn.addEventListener('click', async () => {
      const data = (btn as HTMLElement).dataset;
      const isAdmin = data.isAdmin === 'true';
      
      if (!confirm(`¿${isAdmin ? 'Quitar permisos de admin a' : 'Hacer admin a'} este usuario?`)) {
        return;
      }
      
      try {
        const response = await fetch(`/api/admin/users/${data.id}`, {
          method: 'PATCH',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ is_admin: !isAdmin }),
        });
        
        if (response.ok) {
          window.location.reload();
        } else {
          alert('Error al actualizar permisos');
        }
      } catch (error) {
        console.error('Error:', error);
        alert('Error al actualizar permisos');
      }
    });
  });
  
  // Toggle active status
  const toggleActiveBtns = document.querySelectorAll('.toggle-active-btn');
  toggleActiveBtns.forEach(btn => {
    btn.addEventListener('click', async () => {
      const data = (btn as HTMLElement).dataset;
      const isActive = data.isActive === 'true';
      
      if (!confirm(`¿${isActive ? 'Desactivar' : 'Activar'} este usuario?`)) {
        return;
      }
      
      try {
        const response = await fetch(`/api/admin/users/${data.id}`, {
          method: 'PATCH',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ is_active: !isActive }),
        });
        
        if (response.ok) {
          window.location.reload();
        } else {
          alert('Error al actualizar estado');
        }
      } catch (error) {
        console.error('Error:', error);
        alert('Error al actualizar estado');
      }
    });
  });
</script>
