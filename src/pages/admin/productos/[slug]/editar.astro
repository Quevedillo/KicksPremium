---
import AdminLayout from '@layouts/AdminLayout.astro';
import { CloudinaryImageUpload } from '@components/islands/CloudinaryImageUpload';
import { SizeSelector } from '@components/islands/SizeSelector';
import { supabase } from '@lib/supabase';

const { slug } = Astro.params;

// Obtener producto
const { data: product, error: productError } = await supabase
  .from('products')
  .select('*, categories(name)')
  .eq('slug', slug)
  .single();

if (productError || !product) {
  return Astro.redirect('/admin/productos?error=not-found');
}

// Validar y filtrar im√°genes - remover URLs inv√°lidas de placeholder
const validImages = (product.images || []).filter((img: string) => {
  if (typeof img !== 'string') return false;
  // Remover URLs que parecen ser placeholders locales
  if (img.includes('?text=') || img.startsWith('500x500')) return false;
  // Remover URLs vac√≠as
  if (!img.trim()) return false;
  return true;
});

product.images = validImages;

// Obtener categor√≠as
const { data: categories } = await supabase
  .from('categories')
  .select('id, name, slug')
  .order('name');
---

<AdminLayout title={`Editar: ${product.name}`} currentPage="productos">
  <div class="max-w-4xl">
    {/* Header */}
    <div class="mb-8">
      <a href="/admin/productos" class="inline-flex items-center gap-2 text-sm text-neutral-500 hover:text-brand-black transition-colors mb-4">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        Volver a productos
      </a>
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-2xl font-bold text-brand-black">Editar Producto</h1>
          <p class="text-neutral-500 mt-1">{product.name}</p>
        </div>
        <a
          href={`/productos/${product.slug}`}
          target="_blank"
          class="inline-flex items-center gap-2 px-4 py-2 border border-neutral-300 rounded-lg text-sm font-medium text-neutral-700 hover:bg-neutral-50 transition-colors"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
          </svg>
          Ver en tienda
        </a>
      </div>
    </div>

    <form id="product-form" class="space-y-8" data-product-id={product.id}>
      {/* Basic Info Card */}
      <div class="bg-white rounded-xl border border-neutral-200 overflow-hidden">
        <div class="p-6 border-b border-neutral-200 bg-neutral-50">
          <h2 class="font-semibold text-brand-black">Informaci√≥n B√°sica</h2>
        </div>
        <div class="p-6 space-y-6">
          {/* Name */}
          <div>
            <label for="name" class="block text-sm font-medium text-neutral-700 mb-2">
              Nombre del Producto <span class="text-red-500">*</span>
            </label>
            <input
              type="text"
              id="name"
              name="name"
              required
              value={product.name}
              class="w-full px-4 py-3 border border-neutral-300 rounded-lg bg-white text-brand-black placeholder-neutral-400 focus:outline-none focus:ring-2 focus:ring-brand-black focus:border-transparent transition-all"
            />
          </div>

          {/* Slug */}
          <div>
            <label for="slug" class="block text-sm font-medium text-neutral-700 mb-2">
              Slug (URL)
            </label>
            <input
              type="text"
              id="slug"
              name="slug"
              value={product.slug}
              class="w-full px-4 py-3 border border-neutral-300 rounded-lg bg-white text-brand-black placeholder-neutral-400 focus:outline-none focus:ring-2 focus:ring-brand-black focus:border-transparent transition-all"
            />
            <p class="text-xs text-neutral-500 mt-1">URL: /productos/{product.slug}</p>
          </div>

          {/* Category */}
          <div>
            <label for="category_id" class="block text-sm font-medium text-neutral-700 mb-2">
              Categor√≠a <span class="text-red-500">*</span>
            </label>
            <select
              id="category_id"
              name="category_id"
              required
              class="w-full px-4 py-3 border border-neutral-300 rounded-lg bg-white text-brand-black placeholder-neutral-400 focus:outline-none focus:ring-2 focus:ring-brand-black focus:border-transparent transition-all"
            >
              <option value="">Selecciona una categor√≠a</option>
              {categories?.map((cat) => (
                <option value={cat.id} selected={cat.id === product.category_id}>{cat.name}</option>
              ))}
            </select>
          </div>

          {/* Description */}
          <div>
            <label for="description" class="block text-sm font-medium text-neutral-700 mb-2">
              Descripci√≥n <span class="text-red-500">*</span>
            </label>
            <textarea
              id="description"
              name="description"
              required
              rows="4"
              class="w-full px-4 py-3 border border-neutral-300 rounded-lg bg-white text-brand-black placeholder-neutral-400 focus:outline-none focus:ring-2 focus:ring-brand-black focus:border-transparent transition-all resize-none"
            >{product.description}</textarea>
          </div>
        </div>
      </div>

      {/* Pricing & Inventory Card */}
      <div class="bg-white rounded-xl border border-neutral-200 overflow-hidden">
        <div class="p-6 border-b border-neutral-200 bg-neutral-50">
          <h2 class="font-semibold text-brand-black">Precio e Inventario</h2>
        </div>
        <div class="p-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            {/* Price */}
            <div>
              <label for="price" class="block text-sm font-medium text-neutral-700 mb-2">
                Precio Base (EUR) <span class="text-red-500">*</span>
              </label>
              <div class="relative">
                <span class="absolute left-4 top-1/2 -translate-y-1/2 text-neutral-400">‚Ç¨</span>
                <input
                  type="number"
                  id="price"
                  name="price"
                  step="0.01"
                  min="0"
                  required
                  value={(product.price / 100).toFixed(2)}
                  class="w-full pl-8 pr-4 py-3 border border-neutral-300 rounded-lg bg-white text-brand-black placeholder-neutral-400 focus:outline-none focus:ring-2 focus:ring-brand-black focus:border-transparent transition-all"
                />
              </div>
            </div>

            {/* Cost Price */}
            <div>
              <label for="cost_price" class="block text-sm font-medium text-neutral-700 mb-2">
                Precio Coste (EUR)
              </label>
              <div class="relative">
                <span class="absolute left-4 top-1/2 -translate-y-1/2 text-neutral-400">‚Ç¨</span>
                <input
                  type="number"
                  id="cost_price"
                  name="cost_price"
                  step="0.01"
                  min="0"
                  value={product.cost_price ? (product.cost_price / 100).toFixed(2) : ''}
                  class="w-full pl-8 pr-4 py-3 border border-neutral-300 rounded-lg bg-white text-brand-black placeholder-neutral-400 focus:outline-none focus:ring-2 focus:ring-brand-black focus:border-transparent transition-all"
                  placeholder="0.00"
                />
              </div>
            </div>
          </div>
          
          {/* Stock oculto - se calcula autom√°ticamente desde tallas */}
          <input type="hidden" id="stock" name="stock" value={product.stock} />
          
          {/* Sizes Selection */}
          <div class="mt-6 pt-6 border-t border-neutral-200">
            <h3 class="font-semibold text-neutral-900 mb-4">Configurar Tallas y Cantidades</h3>
            <p class="text-sm text-neutral-600 mb-4">
              El stock total se calcula autom√°ticamente sumando todas las tallas.
            </p>
            <SizeSelector client:load initialSizes={product.sizes_available || {}} />
          </div>
        </div>
      </div>

      {/* Images Card */}
      <div class="bg-white rounded-xl border border-neutral-200 overflow-hidden">
        <div class="p-6 border-b border-neutral-200 bg-neutral-50">
          <h2 class="font-semibold text-brand-black">Im√°genes del Producto</h2>
          <p class="text-sm text-neutral-500 mt-1">Sube hasta 5 im√°genes. La primera ser√° la imagen principal.</p>
        </div>
        <div class="p-6">
          {/* Current Images */}
          {product.images && product.images.length > 0 && (
            <div class="mb-6">
              <p class="text-sm font-medium text-neutral-700 mb-3">Im√°genes actuales:</p>
              <div class="grid grid-cols-2 md:grid-cols-5 gap-4" id="current-images">
                {product.images.map((img: string, index: number) => (
                  <div class="relative group aspect-square rounded-lg overflow-hidden border border-neutral-200">
                    <img
                      src={img}
                      alt={`Imagen ${index + 1}`}
                      class="w-full h-full object-cover"
                    />
                    <button
                      type="button"
                      class="remove-image-btn absolute top-2 right-2 w-6 h-6 bg-red-500 text-white rounded-full opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center"
                      data-url={img}
                    >
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                      </svg>
                    </button>
                    {index === 0 && (
                      <span class="absolute bottom-2 left-2 bg-brand-black text-white text-xs px-2 py-1 rounded">
                        Principal
                      </span>
                    )}
                  </div>
                ))}
              </div>
            </div>
          )}

          <CloudinaryImageUpload 
            client:load 
            maxFiles={5 - (product.images?.length || 0)} 
            existingImages={product.images || []}
          />
          <input type="hidden" id="images" name="images" value={JSON.stringify(product.images || [])} />
        </div>
      </div>

      {/* Additional Details Card */}
      <div class="bg-white rounded-xl border border-neutral-200 overflow-hidden">
        <div class="p-6 border-b border-neutral-200 bg-neutral-50">
          <h2 class="font-semibold text-brand-black">Detalles Adicionales</h2>
        </div>
        <div class="p-6">
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            {/* SKU */}
            <div>
              <label for="sku" class="block text-sm font-medium text-neutral-700 mb-2">
                SKU
              </label>
              <input
                type="text"
                id="sku"
                name="sku"
                value={product.sku || ''}
                class="w-full px-4 py-3 border border-neutral-300 rounded-lg bg-white text-brand-black placeholder-neutral-400 focus:outline-none focus:ring-2 focus:ring-brand-black focus:border-transparent transition-all"
                placeholder="Se genera autom√°ticamente"
              />
              <p class="text-xs text-neutral-500 mt-1">Se genera autom√°ticamente si lo dejas vac√≠o</p>
            </div>

            {/* Brand */}
            <div>
              <label for="brand" class="block text-sm font-medium text-neutral-700 mb-2">
                Marca
              </label>
              <input
                type="text"
                id="brand"
                name="brand"
                value={product.brand || ''}
                class="w-full px-4 py-3 border border-neutral-300 rounded-lg bg-white text-brand-black placeholder-neutral-400 focus:outline-none focus:ring-2 focus:ring-brand-black focus:border-transparent transition-all"
              />
            </div>

            {/* Color */}
            <div>
              <label for="color" class="block text-sm font-medium text-neutral-700 mb-2">
                Color
              </label>
              <input
                type="text"
                id="color"
                name="color"
                value={product.color || ''}
                class="w-full px-4 py-3 border border-neutral-300 rounded-lg bg-white text-brand-black placeholder-neutral-400 focus:outline-none focus:ring-2 focus:ring-brand-black focus:border-transparent transition-all"
                placeholder="Ej: Negro, Blanco, Azul"
              />
            </div>
          </div>
        </div>
      </div>

      {/* Colecci√≥n / Tipo de Lanzamiento Card */}
      <div class="bg-white rounded-xl border border-neutral-200 overflow-hidden">
        <div class="p-6 border-b border-neutral-200 bg-neutral-50">
          <h2 class="font-semibold text-brand-black">Colecci√≥n y Tipo de Lanzamiento</h2>
        </div>
        <div class="p-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            {/* Edici√≥n Limitada */}
            <div>
              <label class="flex items-center gap-3 cursor-pointer">
                <input
                  type="checkbox"
                  id="is_limited_edition"
                  name="is_limited_edition"
                  checked={product.is_limited_edition || false}
                  class="w-5 h-5 rounded border-neutral-300 text-brand-red focus:ring-brand-red"
                />
                <div>
                  <span class="text-sm font-medium text-neutral-700">Edici√≥n Limitada</span>
                  <p class="text-xs text-neutral-500">Marca este producto como edici√≥n limitada</p>
                </div>
              </label>
            </div>

            {/* Tipo de Lanzamiento */}
            <div>
              <label for="release_type" class="block text-sm font-medium text-neutral-700 mb-2">
                Tipo de Lanzamiento
              </label>
              <select
                id="release_type"
                name="release_type"
                class="w-full px-4 py-3 border border-neutral-300 rounded-lg bg-white text-brand-black focus:outline-none focus:ring-2 focus:ring-brand-black focus:border-transparent transition-all"
              >
                <option value="standard" selected={product.release_type === 'standard' || !product.release_type}>Est√°ndar</option>
                <option value="restock" selected={product.release_type === 'restock'}>Restock</option>
                <option value="limited" selected={product.release_type === 'limited'}>Lanzamiento Limitado</option>
              </select>
            </div>
          </div>
        </div>
      </div>

      {/* Descuento / Oferta Card */}
      <div class="bg-white rounded-xl border border-neutral-200 overflow-hidden">
        <div class="p-6 border-b border-neutral-200 bg-neutral-50">
          <h2 class="font-semibold text-brand-black">üè∑Ô∏è Descuento / Oferta</h2>
          <p class="text-sm text-neutral-500 mt-1">Si activas un descuento, se notificar√° a los suscriptores del newsletter.</p>
        </div>
        <div class="p-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            {/* Tipo de Descuento */}
            <div>
              <label for="discount_type" class="block text-sm font-medium text-neutral-700 mb-2">
                Tipo de Descuento
              </label>
              <select
                id="discount_type"
                name="discount_type"
                class="w-full px-4 py-3 border border-neutral-300 rounded-lg bg-white text-brand-black focus:outline-none focus:ring-2 focus:ring-brand-black focus:border-transparent transition-all"
              >
                <option value="" selected={!product.discount_type}>Sin descuento</option>
                <option value="percentage" selected={product.discount_type === 'percentage'}>Porcentaje (%)</option>
                <option value="fixed" selected={product.discount_type === 'fixed'}>Cantidad fija (‚Ç¨)</option>
              </select>
            </div>

            {/* Valor del Descuento */}
            <div>
              <label for="discount_value" class="block text-sm font-medium text-neutral-700 mb-2">
                Valor del Descuento
              </label>
              <div class="relative">
                <input
                  type="number"
                  id="discount_value"
                  name="discount_value"
                  step="0.01"
                  min="0"
                  value={product.discount_value || ''}
                  disabled={!product.discount_type}
                  class="w-full px-4 py-3 border border-neutral-300 rounded-lg bg-white text-brand-black placeholder-neutral-400 focus:outline-none focus:ring-2 focus:ring-brand-black focus:border-transparent transition-all"
                  placeholder="0"
                />
                <span id="discount_suffix" class="absolute right-4 top-1/2 -translate-y-1/2 text-neutral-400 font-medium">
                  {product.discount_type === 'percentage' ? '%' : product.discount_type === 'fixed' ? '‚Ç¨' : ''}
                </span>
              </div>
            </div>
          </div>

          {/* Preview del precio con descuento */}
          <div id="discount-preview" class={`mt-4 p-4 bg-green-50 border border-green-200 rounded-lg ${!product.discount_type ? 'hidden' : ''}`}>
            <p class="text-sm font-medium text-green-800">
              <span class="line-through text-neutral-400" id="preview-original"></span>
              ‚Üí <span class="text-green-700 font-bold text-lg" id="preview-final"></span>
              <span class="ml-2 bg-green-100 text-green-800 text-xs font-bold px-2 py-1 rounded" id="preview-savings"></span>
            </p>
          </div>
        </div>
      </div>

      {/* Actions */}
      <div class="flex items-center justify-between gap-4 pt-4">
        <button
          type="button"
          id="delete-btn"
          class="px-6 py-3 border border-red-300 text-red-600 rounded-lg font-medium hover:bg-red-50 transition-colors"
        >
          Eliminar Producto
        </button>
        
        <div class="flex items-center gap-4">
          <a
            href="/admin/productos"
            class="px-6 py-3 border border-neutral-300 rounded-lg font-medium text-neutral-700 hover:bg-neutral-50 transition-colors"
          >
            Cancelar
          </a>
          <button
            type="submit"
            id="submit-btn"
            class="px-8 py-3 bg-brand-black text-white rounded-lg font-medium hover:bg-neutral-800 transition-colors flex items-center gap-2"
          >
            <span>Guardar Cambios</span>
            <svg class="w-4 h-4 hidden animate-spin" id="loading-spinner" fill="none" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
          </button>
        </div>
      </div>
    </form>
  </div>
</AdminLayout>

<script define:vars={{ productId: product.id, productOriginalPrice: product.original_price, productPrice: product.price, productDiscountType: product.discount_type, productDiscountValue: product.discount_value }}>
  // Get current images from hidden input
  let currentImages = JSON.parse(document.getElementById('images')?.value || '[]');
  const imagesInput = document.getElementById('images');

  // Discount elements
  const discountTypeSelect = document.getElementById('discount_type');
  const discountValueInput = document.getElementById('discount_value');
  const discountSuffix = document.getElementById('discount_suffix');
  const discountPreview = document.getElementById('discount-preview');
  const previewOriginal = document.getElementById('preview-original');
  const previewFinal = document.getElementById('preview-final');
  const previewSavings = document.getElementById('preview-savings');
  const priceInput = document.getElementById('price');

  // El precio base que se muestra es el original (si hay descuento) o el actual
  // Si el producto ya tiene descuento, mostramos el precio original en el campo
  if (productOriginalPrice && productDiscountType && productDiscountValue > 0) {
    // El campo de precio muestra el precio ORIGINAL (base)
    priceInput.value = (productOriginalPrice / 100).toFixed(2);
  }

  // Discount type change handler 
  discountTypeSelect?.addEventListener('change', () => {
    const type = discountTypeSelect.value;
    if (type) {
      discountValueInput.disabled = false;
      discountSuffix.textContent = type === 'percentage' ? '%' : '‚Ç¨';
    } else {
      discountValueInput.disabled = true;
      discountValueInput.value = '';
      discountSuffix.textContent = '';
      discountPreview.classList.add('hidden');
    }
    updateDiscountPreview();
  });

  discountValueInput?.addEventListener('input', updateDiscountPreview);
  priceInput?.addEventListener('input', updateDiscountPreview);

  function updateDiscountPreview() {
    const type = discountTypeSelect?.value;
    const value = parseFloat(discountValueInput?.value || '0');
    const price = parseFloat(priceInput?.value || '0');

    if (!type || !value || !price || value <= 0 || price <= 0) {
      discountPreview?.classList.add('hidden');
      return;
    }

    let finalPrice = price;
    let savingsText = '';

    if (type === 'percentage') {
      finalPrice = price * (1 - value / 100);
      savingsText = `-${value}%`;
    } else if (type === 'fixed') {
      finalPrice = Math.max(0, price - value);
      savingsText = `-‚Ç¨${value.toFixed(0)}`;
    }

    if (previewOriginal) previewOriginal.textContent = `‚Ç¨${price.toFixed(2)}`;
    if (previewFinal) previewFinal.textContent = `‚Ç¨${finalPrice.toFixed(2)}`;
    if (previewSavings) previewSavings.textContent = savingsText;
    discountPreview?.classList.remove('hidden');
  }

  // Initialize discount preview on load
  updateDiscountPreview();

  // Remove image from current images
  const removeImageBtns = document.querySelectorAll('.remove-image-btn');
  removeImageBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      const url = btn.dataset.url;
      currentImages = currentImages.filter(img => img !== url);
      if (imagesInput) imagesInput.value = JSON.stringify(currentImages);
      
      // Remove from DOM
      btn.closest('.aspect-square')?.remove();
      
      // Update CloudinaryImageUpload maxFiles
      const event = new CustomEvent('cloudinary-max-files-updated', {
        detail: { maxFiles: 5 - currentImages.length }
      });
      window.dispatchEvent(event);
    });
  });

  // Listen for new images from CloudinaryImageUpload
  window.addEventListener('cloudinary-images-updated', (e) => {
    console.log('Received cloudinary-images-updated:', e.detail.images);
    const newImages = e.detail.images || [];
    currentImages = [...currentImages, ...newImages];
    if (imagesInput) imagesInput.value = JSON.stringify(currentImages);
    console.log('Updated currentImages:', currentImages);
  });

  // Form submission
  const form = document.getElementById('product-form');
  const submitBtn = document.getElementById('submit-btn');
  const spinner = document.getElementById('loading-spinner');
  
  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    // Show loading state
    if (submitBtn) submitBtn.setAttribute('disabled', 'true');
    spinner?.classList.remove('hidden');
    
    try {
      const formData = new FormData(form);
      
      // Get images from input
      const imagesValue = formData.get('images')?.toString() || '[]';
      let images = [];
      try {
        images = JSON.parse(imagesValue);
        if (!Array.isArray(images)) images = [];
      } catch (e) {
        console.warn('Could not parse images:', imagesValue);
        images = [];
      }
      
      // Build product data
      const productData = {
        name: formData.get('name')?.toString().trim() || '',
        slug: formData.get('slug')?.toString().trim() || '',
        description: formData.get('description')?.toString().trim() || '',
        category_id: formData.get('category_id')?.toString().trim() || '',
        price: parseFloat(formData.get('price')?.toString() || '0'),
        cost_price: parseFloat(formData.get('cost_price')?.toString() || '0') || null,
        stock: parseInt(formData.get('stock')?.toString() || '0'),
        sizes_available: JSON.parse(formData.get('sizes_available')?.toString() || '{}'),
        images: images,
        sku: formData.get('sku')?.toString().trim() || null,
        brand: formData.get('brand')?.toString().trim() || null,
        color: formData.get('color')?.toString().trim() || null,
        is_limited_edition: document.getElementById('is_limited_edition')?.checked || false,
        release_type: formData.get('release_type')?.toString() || 'standard',
        discount_type: formData.get('discount_type')?.toString() || null,
        discount_value: formData.get('discount_type')?.toString() ? parseFloat(formData.get('discount_value')?.toString() || '0') || null : null,
      };
      
      console.log('Enviando actualizaci√≥n:', productData);
      
      const response = await fetch(`/api/admin/products/${productId}`, {
        method: 'PUT',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(productData),
      });
      
      const result = await response.json();
      console.log('Respuesta:', result);
      
