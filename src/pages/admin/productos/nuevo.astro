---
import AdminLayout from '@layouts/AdminLayout.astro';
import { CloudinaryImageUpload } from '@components/islands/CloudinaryImageUpload';
import { SizeSelector } from '@components/islands/SizeSelector';
import { supabase } from '@lib/supabase';

// Obtener categor√≠as
const { data: categories } = await supabase
  .from('categories')
  .select('id, name, slug')
  .order('name');
---

<AdminLayout title="Nuevo Producto" currentPage="productos">
  <div class="max-w-4xl">
    {/* Header */}
    <div class="mb-8">
      <a href="/admin/productos" class="inline-flex items-center gap-2 text-sm text-neutral-500 hover:text-brand-black transition-colors mb-4">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        Volver a productos
      </a>
      <h1 class="text-2xl font-bold text-brand-black">Crear Nuevo Producto</h1>
      <p class="text-neutral-500 mt-1">Completa la informaci√≥n del producto</p>
    </div>

    <form id="product-form" class="space-y-8">
      {/* Basic Info Card */}
      <div class="bg-white rounded-xl border border-neutral-200 overflow-hidden">
        <div class="p-6 border-b border-neutral-200 bg-neutral-50">
          <h2 class="font-semibold text-brand-black">Informaci√≥n B√°sica</h2>
        </div>
        <div class="p-6 space-y-6">
          {/* Name */}
          <div>
            <label for="name" class="block text-sm font-medium text-neutral-700 mb-2">
              Nombre del Producto <span class="text-red-500">*</span>
            </label>
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full px-4 py-3 border border-neutral-300 rounded-lg bg-white text-brand-black placeholder-neutral-400 focus:outline-none focus:ring-2 focus:ring-brand-black focus:border-transparent transition-all"
              placeholder="Ej: Zapato Oxford Premium Negro"
            />
          </div>

          {/* Slug - Auto-generated */}
          <div>
            <label for="slug" class="block text-sm font-medium text-neutral-700 mb-2">
              Slug (URL)
            </label>
            <input
              type="text"
              id="slug"
              name="slug"
              class="w-full px-4 py-3 border border-neutral-300 rounded-lg bg-neutral-50 text-brand-black placeholder-neutral-400 focus:outline-none focus:ring-2 focus:ring-brand-black focus:border-transparent transition-all"
              placeholder="Se generar√° autom√°ticamente"
              readonly
            />
            <p class="text-xs text-neutral-500 mt-1">Se genera autom√°ticamente del nombre</p>
          </div>

          {/* Category */}
          <div>
            <label for="category_id" class="block text-sm font-medium text-neutral-700 mb-2">
              Categor√≠a <span class="text-red-500">*</span>
            </label>
            <select
              id="category_id"
              name="category_id"
              required
              class="w-full px-4 py-3 border border-neutral-300 rounded-lg bg-white text-brand-black focus:outline-none focus:ring-2 focus:ring-brand-black focus:border-transparent transition-all"
            >
              <option value="">Selecciona una categor√≠a</option>
              {categories?.map((cat) => (
                <option value={cat.id}>{cat.name}</option>
              ))}
            </select>
          </div>

          {/* Description */}
          <div>
            <label for="description" class="block text-sm font-medium text-neutral-700 mb-2">
              Descripci√≥n <span class="text-red-500">*</span>
            </label>
            <textarea
              id="description"
              name="description"
              required
              rows="4"
              class="w-full px-4 py-3 border border-neutral-300 rounded-lg bg-white text-brand-black placeholder-neutral-400 focus:outline-none focus:ring-2 focus:ring-brand-black focus:border-transparent transition-all resize-none"
              placeholder="Descripci√≥n detallada del producto..."
            ></textarea>
          </div>
        </div>
      </div>

      {/* Pricing & Inventory Card */}
      <div class="bg-white rounded-xl border border-neutral-200 overflow-hidden">
        <div class="p-6 border-b border-neutral-200 bg-neutral-50">
          <h2 class="font-semibold text-brand-black">Precio e Inventario</h2>
        </div>
        <div class="p-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            {/* Price */}
            <div>
              <label for="price" class="block text-sm font-medium text-neutral-700 mb-2">
                Precio Venta (EUR) <span class="text-red-500">*</span>
              </label>
              <div class="relative">
                <span class="absolute left-4 top-1/2 -translate-y-1/2 text-neutral-400">‚Ç¨</span>
                <input
                  type="number"
                  id="price"
                  name="price"
                  step="0.01"
                  min="0"
                  required
                  class="w-full pl-8 pr-4 py-3 border border-neutral-300 rounded-lg bg-white text-brand-black placeholder-neutral-400 focus:outline-none focus:ring-2 focus:ring-brand-black focus:border-transparent transition-all"
                  placeholder="0.00"
                />
              </div>
            </div>

            {/* Cost Price */}
            <div>
              <label for="cost_price" class="block text-sm font-medium text-neutral-700 mb-2">
                Precio Coste (EUR) <span class="text-red-500">*</span>
              </label>
              <div class="relative">
                <span class="absolute left-4 top-1/2 -translate-y-1/2 text-neutral-400">‚Ç¨</span>
                <input
                  type="number"
                  id="cost_price"
                  name="cost_price"
                  step="0.01"
                  min="0"
                  required
                  class="w-full pl-8 pr-4 py-3 border border-neutral-300 rounded-lg bg-white text-brand-black placeholder-neutral-400 focus:outline-none focus:ring-2 focus:ring-brand-black focus:border-transparent transition-all"
                  placeholder="0.00"
                />
              </div>
              <p class="text-xs text-neutral-500 mt-1">El margen se calcular√° autom√°ticamente</p>
            </div>
          </div>
          
          {/* Stock oculto - se calcula autom√°ticamente desde tallas */}
          <input type="hidden" id="stock" name="stock" value="0" />
          
          {/* Sizes Selection */}
          <div class="mt-6 pt-6 border-t border-neutral-200">
            <h3 class="font-semibold text-neutral-900 mb-4">Configurar Tallas y Cantidades</h3>
            <p class="text-sm text-neutral-600 mb-4">
              Selecciona qu√© tallas tienes en stock y cu√°ntos pares de cada una. 
              <strong>El stock total se calcula autom√°ticamente.</strong>
            </p>
            <SizeSelector client:load />
          </div>
        </div>
      </div>

      {/* Images Card */}
      <div class="bg-white rounded-xl border border-neutral-200 overflow-hidden">
        <div class="p-6 border-b border-neutral-200 bg-neutral-50">
          <h2 class="font-semibold text-brand-black">Im√°genes del Producto</h2>
          <p class="text-sm text-neutral-500 mt-1">Sube hasta 5 im√°genes. La primera ser√° la imagen principal.</p>
        </div>
        <div class="p-6">
          <CloudinaryImageUpload client:load maxFiles={5} />
          <input type="hidden" id="images" name="images" value="[]" />
        </div>
      </div>

      {/* Additional Details Card */}
      <div class="bg-white rounded-xl border border-neutral-200 overflow-hidden">
        <div class="p-6 border-b border-neutral-200 bg-neutral-50">
          <h2 class="font-semibold text-brand-black">Detalles Adicionales</h2>
        </div>
        <div class="p-6">
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            {/* SKU */}
            <div>
              <label for="sku" class="block text-sm font-medium text-neutral-700 mb-2">
                SKU
              </label>
              <input
                type="text"
                id="sku"
                name="sku"
                class="w-full px-4 py-3 border border-neutral-300 rounded-lg bg-white text-brand-black placeholder-neutral-400 focus:outline-none focus:ring-2 focus:ring-brand-black focus:border-transparent transition-all"
                placeholder="Se genera autom√°ticamente"
              />
              <p class="text-xs text-neutral-500 mt-1">Se genera autom√°ticamente si lo dejas vac√≠o</p>
            </div>

            {/* Brand */}
            <div>
              <label for="brand" class="block text-sm font-medium text-neutral-700 mb-2">
                Marca
              </label>
              <input
                type="text"
                id="brand"
                name="brand"
                class="w-full px-4 py-3 border border-neutral-300 rounded-lg bg-white text-brand-black placeholder-neutral-400 focus:outline-none focus:ring-2 focus:ring-brand-black focus:border-transparent transition-all"
                placeholder="Nombre de la marca"
              />
            </div>

            {/* Color */}
            <div>
              <label for="color" class="block text-sm font-medium text-neutral-700 mb-2">
                Color
              </label>
              <input
                type="text"
                id="color"
                name="color"
                class="w-full px-4 py-3 border border-neutral-300 rounded-lg bg-white text-brand-black placeholder-neutral-400 focus:outline-none focus:ring-2 focus:ring-brand-black focus:border-transparent transition-all"
                placeholder="Ej: Negro, Blanco, Rojo"
              />
            </div>
          </div>
        </div>
      </div>

      {/* Colecci√≥n / Tipo de Lanzamiento Card */}
      <div class="bg-white rounded-xl border border-neutral-200 overflow-hidden">
        <div class="p-6 border-b border-neutral-200 bg-neutral-50">
          <h2 class="font-semibold text-brand-black">Colecci√≥n y Tipo de Lanzamiento</h2>
        </div>
        <div class="p-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            {/* Edici√≥n Limitada */}
            <div>
              <label class="flex items-center gap-3 cursor-pointer">
                <input
                  type="checkbox"
                  id="is_limited_edition"
                  name="is_limited_edition"
                  class="w-5 h-5 rounded border-neutral-300 text-brand-red focus:ring-brand-red"
                />
                <div>
                  <span class="text-sm font-medium text-neutral-700">Edici√≥n Limitada</span>
                  <p class="text-xs text-neutral-500">Marca este producto como edici√≥n limitada (aparecer√° en la colecci√≥n "Ediciones Limitadas")</p>
                </div>
              </label>
            </div>

            {/* Tipo de Lanzamiento */}
            <div>
              <label for="release_type" class="block text-sm font-medium text-neutral-700 mb-2">
                Tipo de Lanzamiento
              </label>
              <select
                id="release_type"
                name="release_type"
                class="w-full px-4 py-3 border border-neutral-300 rounded-lg bg-white text-brand-black focus:outline-none focus:ring-2 focus:ring-brand-black focus:border-transparent transition-all"
              >
                <option value="standard">Est√°ndar</option>
                <option value="restock">Restock (aparecer√° en la colecci√≥n "Restocks")</option>
                <option value="limited">Lanzamiento Limitado</option>
              </select>
            </div>
          </div>
        </div>
      </div>

      {/* Descuento / Oferta Card */}
      <div class="bg-white rounded-xl border border-neutral-200 overflow-hidden">
        <div class="p-6 border-b border-neutral-200 bg-neutral-50">
          <h2 class="font-semibold text-brand-black">üè∑Ô∏è Descuento / Oferta</h2>
          <p class="text-sm text-neutral-500 mt-1">Si activas un descuento, el producto aparecer√° en la colecci√≥n "Ofertas" y se notificar√° a los suscriptores del newsletter.</p>
        </div>
        <div class="p-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            {/* Tipo de Descuento */}
            <div>
              <label for="discount_type" class="block text-sm font-medium text-neutral-700 mb-2">
                Tipo de Descuento
              </label>
              <select
                id="discount_type"
                name="discount_type"
                class="w-full px-4 py-3 border border-neutral-300 rounded-lg bg-white text-brand-black focus:outline-none focus:ring-2 focus:ring-brand-black focus:border-transparent transition-all"
              >
                <option value="">Sin descuento</option>
                <option value="percentage">Porcentaje (%)</option>
                <option value="fixed">Cantidad fija (‚Ç¨)</option>
              </select>
            </div>

            {/* Valor del Descuento */}
            <div>
              <label for="discount_value" class="block text-sm font-medium text-neutral-700 mb-2">
                Valor del Descuento
              </label>
              <div class="relative">
                <input
                  type="number"
                  id="discount_value"
                  name="discount_value"
                  step="0.01"
                  min="0"
                  class="w-full px-4 py-3 border border-neutral-300 rounded-lg bg-white text-brand-black placeholder-neutral-400 focus:outline-none focus:ring-2 focus:ring-brand-black focus:border-transparent transition-all"
                  placeholder="0"
                  disabled
                />
                <span id="discount_suffix" class="absolute right-4 top-1/2 -translate-y-1/2 text-neutral-400 font-medium"></span>
              </div>
              <p class="text-xs text-neutral-500 mt-1">Ej: 20 para 20% o 30 para ‚Ç¨30 de descuento</p>
            </div>
          </div>

          {/* Preview del precio con descuento */}
          <div id="discount-preview" class="mt-4 p-4 bg-green-50 border border-green-200 rounded-lg hidden">
            <p class="text-sm font-medium text-green-800">
              <span class="line-through text-neutral-400" id="preview-original"></span>
              ‚Üí <span class="text-green-700 font-bold text-lg" id="preview-final"></span>
              <span class="ml-2 bg-green-100 text-green-800 text-xs font-bold px-2 py-1 rounded" id="preview-savings"></span>
            </p>
          </div>
        </div>
      </div>

      {/* Actions */}
      <div class="flex items-center justify-end gap-4 pt-4">
        <a
          href="/admin/productos"
          class="px-6 py-3 border border-neutral-300 rounded-lg font-medium text-neutral-700 hover:bg-neutral-50 transition-colors"
        >
          Cancelar
        </a>
        <button
          type="submit"
          id="submit-btn"
          class="px-8 py-3 bg-brand-black text-white rounded-lg font-medium hover:bg-neutral-800 transition-colors flex items-center gap-2"
        >
          <span>Crear Producto</span>
          <svg class="w-4 h-4 hidden animate-spin" id="loading-spinner" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
          </svg>
        </button>
      </div>
    </form>
  </div>
</AdminLayout>

<script>
  // Generate slug from name
  const nameInput = document.getElementById('name') as HTMLInputElement;
  const slugInput = document.getElementById('slug') as HTMLInputElement;
  const imagesInput = document.getElementById('images') as HTMLInputElement;
  const stockInput = document.getElementById('stock') as HTMLInputElement;
  const sizesInput = document.querySelector('input[name="sizes_available"]') as HTMLInputElement;
  
  // Discount elements
  const discountTypeSelect = document.getElementById('discount_type') as HTMLSelectElement;
  const discountValueInput = document.getElementById('discount_value') as HTMLInputElement;
  const discountSuffix = document.getElementById('discount_suffix') as HTMLElement;
  const discountPreview = document.getElementById('discount-preview') as HTMLElement;
  const previewOriginal = document.getElementById('preview-original') as HTMLElement;
  const previewFinal = document.getElementById('preview-final') as HTMLElement;
  const previewSavings = document.getElementById('preview-savings') as HTMLElement;
  const priceInput = document.getElementById('price') as HTMLInputElement;
  
  nameInput?.addEventListener('input', () => {
    const slug = nameInput.value
      .toLowerCase()
      .normalize('NFD')
      .replace(/[\u0300-\u036f]/g, '')
      .replace(/[^a-z0-9]+/g, '-')
      .replace(/^-+|-+$/g, '');
    slugInput.value = slug;
  });

  // Discount type change handler
  discountTypeSelect?.addEventListener('change', () => {
    const type = discountTypeSelect.value;
    if (type) {
      discountValueInput.disabled = false;
      discountSuffix.textContent = type === 'percentage' ? '%' : '‚Ç¨';
    } else {
      discountValueInput.disabled = true;
      discountValueInput.value = '';
      discountSuffix.textContent = '';
      discountPreview.classList.add('hidden');
    }
    updateDiscountPreview();
  });

  // Discount value and price change handler
  discountValueInput?.addEventListener('input', updateDiscountPreview);
  priceInput?.addEventListener('input', updateDiscountPreview);

  function updateDiscountPreview() {
    const type = discountTypeSelect?.value;
    const value = parseFloat(discountValueInput?.value || '0');
    const price = parseFloat(priceInput?.value || '0');

    if (!type || !value || !price || value <= 0 || price <= 0) {
      discountPreview?.classList.add('hidden');
      return;
    }

    let finalPrice = price;
    let savingsText = '';

    if (type === 'percentage') {
      finalPrice = price * (1 - value / 100);
      savingsText = `-${value}%`;
    } else if (type === 'fixed') {
      finalPrice = Math.max(0, price - value);
      savingsText = `-‚Ç¨${value.toFixed(0)}`;
    }

    if (previewOriginal) previewOriginal.textContent = `‚Ç¨${price.toFixed(2)}`;
    if (previewFinal) previewFinal.textContent = `‚Ç¨${finalPrice.toFixed(2)}`;
    if (previewSavings) previewSavings.textContent = savingsText;
    discountPreview?.classList.remove('hidden');
  }

  // Actualizar stock en el componente SizeSelector
  stockInput?.addEventListener('change', () => {
    const stock = parseInt(stockInput.value) || 0;
    const event = new CustomEvent('stock-updated', { detail: { stock } });
    window.dispatchEvent(event);
  });

  // Listen for images from CloudinaryImageUpload
  window.addEventListener('cloudinary-images-updated', ((e: CustomEvent) => {
    console.log('Received cloudinary-images-updated:', e.detail.images);
    if (imagesInput) {
      imagesInput.value = JSON.stringify(e.detail.images || []);
      console.log('Updated images input:', imagesInput.value);
    }
  }) as EventListener);

  // Listen for sizes updated
  window.addEventListener('sizes-updated', ((e: CustomEvent) => {
    console.log('Received sizes-updated:', e.detail.sizes);
    if (sizesInput) {
      sizesInput.value = JSON.stringify(e.detail.sizes || {});
    }
  }) as EventListener);

  // Form submission
  const form = document.getElementById('product-form') as HTMLFormElement;
  const submitBtn = document.getElementById('submit-btn');
  const spinner = document.getElementById('loading-spinner');
  
  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    // Show loading state
    if (submitBtn) submitBtn.setAttribute('disabled', 'true');
    spinner?.classList.remove('hidden');
    
    try {
      const formData = new FormData(form);
      
      // Validar campos requeridos
      const categoryId = formData.get('category_id')?.toString().trim();
      if (!categoryId) {
        alert('Por favor selecciona una categor√≠a');
        return;
      }
      
      // Build product data
      const name = formData.get('name')?.toString().trim() || '';
      const slug = formData.get('slug')?.toString().trim() || 
        name.toLowerCase()
          .normalize('NFD')
          .replace(/[\u0300-\u036f]/g, '')
          .replace(/[^a-z0-9]+/g, '-')
          .replace(/^-+|-+$/g, '');
      
      const imagesValue = formData.get('images')?.toString() || '[]';
      let images: string[] = [];
      try {
        images = JSON.parse(imagesValue);
        if (!Array.isArray(images)) images = [];
      } catch (e) {
        console.warn('Could not parse images:', imagesValue);
        images = [];
      }

      const sizesValue = formData.get('sizes_available')?.toString() || '{}';
      let sizes_available: Record<string, number> = {};
      try {
        sizes_available = JSON.parse(sizesValue);
        if (typeof sizes_available !== 'object') sizes_available = {};
      } catch (e) {
        console.warn('Could not parse sizes:', sizesValue);
        sizes_available = {};
      }
      
      // Discount fields
      const discountType = formData.get('discount_type')?.toString() || '';
      const discountVal = parseFloat(formData.get('discount_value')?.toString() || '0');
      
      const productData = {
        name: name,
        slug: slug,
        description: formData.get('description')?.toString().trim() || '',
        category_id: categoryId,
        price: parseFloat(formData.get('price')?.toString() || '0'),
        cost_price: parseFloat(formData.get('cost_price')?.toString() || '0'),
        stock: parseInt(formData.get('stock')?.toString() || '0'),
        images: images,
        sizes_available: sizes_available,
        sku: formData.get('sku')?.toString().trim() || null,
        brand: formData.get('brand')?.toString().trim() || null,
        color: formData.get('color')?.toString().trim() || null,
        is_limited_edition: (document.getElementById('is_limited_edition') as HTMLInputElement)?.checked || false,
        release_type: formData.get('release_type')?.toString() || 'standard',
        discount_type: discountType || null,
        discount_value: discountType && discountVal > 0 ? discountVal : null,
      };
      
      console.log('Enviando producto:', productData);
      
      const response = await fetch('/api/admin/products', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(productData),
      });
      
      const result = await response.json();
      console.log('Respuesta:', result);
      
      if (response.ok) {
        window.location.href = '/admin/productos?created=true';
      } else {
        alert(result.error || 'Error al crear el producto');
        console.error('Error details:', result);
      }
    } catch (error) {
      console.error('Error:', error);
      alert('Error al crear el producto: ' + (error as Error).message);
    } finally {
      if (submitBtn) submitBtn.removeAttribute('disabled');
      spinner?.classList.add('hidden');
    }
  });
</script>
